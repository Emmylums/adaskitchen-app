{
  "routes": [
    {
      "handle": "filesystem"
    },

    {
      "src": "^/robots\\.txt$",
      "dest": "/robots.txt"
    },
    {
      "src": "^/sitemap\\.xml$",
      "dest": "/sitemap.xml"
    },

    {
      "src": "^/assets/(.*)",
      "dest": "/assets/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },

    {
      "src": "^/(.*\\.(png|jpg|jpeg|gif|svg|ico|webp))$",
      "dest": "/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },

    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
